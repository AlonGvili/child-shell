{
  "name": "node-powershell",
  "version": "4.0.0",
  "description": "Easily run PowerShell from your NodeJS app",
  "license": "MIT",
  "homepage": "http://rannn505.github.io/node-powershell/",
  "repository": "github:rannn505/node-powershell",
  "author": "Ran Cohen <rannn505@outlook.com>",
  "bugs": "https://github.com/rannn505/node-powershell/issues",
  "main": "./dist/index.js",
  "files": [
    "dist",
    "docs",
    "examples",
    "lib"
  ],
  "scripts": {
    "clean": "npx rimraf dist coverage",
    "format": "prettier --write \"lib/**/*.{ts}\" \"**/*.md\"",
    "lint": "eslint --ext ts lib --fix",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "build": "npm run clean && tsc",
    "build:watch": "npm run build -- -w",
    "pretest": "npm run build",
    "prepublishOnly": "npm run clean && npm run format && npm run lint && npm test",
    "examples": "npm run build && npx ts-node examples",
    "start": "npm run examples"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "bytes": "^3.1.0",
    "ms": "^2.1.2",
    "p-queue": "^6.3.0",
    "rxjs": "^6.5.5",
    "shortid": "^2.2.15",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@types/bytes": "^3.1.0",
    "@types/jest": "^25.2.1",
    "@types/ms": "^0.7.31",
    "@types/node": "^13.11.1",
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.3.0",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "keywords": [
    "node-powershell",
    "ps",
    "powershell",
    "node-ps",
    "microsoft",
    "shell",
    "cmd",
    "commandline",
    "command",
    "Line",
    "windows",
    "windows powershell",
    "script",
    "spwan",
    "shells",
    "terminal",
    "linux powershell",
    "powershell github",
    "PowerShell for every system",
    "PowerShell cross-platform",
    "powershell linux",
    "powershell centos",
    "powershell rhel",
    "powershell ubuntu",
    "powershell macos",
    "powershell docker",
    "PowerShell Core",
    "PowerShell Core 6.0",
    "PowerShell 6.0",
    "pwsh"
  ]
}
