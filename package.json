{
  "name": "node-shell",
  "version": "5.0.0",
  "private": true,
  "description": "Easily run any shell from your NodeJS app",
  "author": "Ran Cohen <rannn505@outlook.com>",
  "homepage": "http://rannn505.github.io/node-shell/",
  "license": "MIT",
  "scripts": {
    "clean": "lerna exec -- rimraf dist tsconfig.tsbuildinfo coverage",
    "clean:all": "npm run clean && lerna exec -- rimraf node_modules && rimraf node_modules",
    "bootstrap": "lerna bootstrap --hoist --strict",
    "format": "prettier --write '**/*.{js,ts,md}' --ignore-path .gitignore",
    "format:check": "prettier --check '**/*.{js,ts,md}' --ignore-path .gitignore",
    "lint": "eslint . --cache --fix --ext js,ts --ignore-path .gitignore",
    "lint:check": "eslint . --cache --ext js,ts --ignore-path .gitignore",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "compile": "lerna exec --ignore examples -- tsc --build",
    "build": "npm run clean && npm run bootstrap && npm run compile",
    "build:watch": "npm run build && tsc --build --watch",
    "examples": "npm run build && ts-node examples",
    "start": "npm run examples"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.3.0",
    "lerna": "^3.20.2",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  }
}
